<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="250"
        x:Class="SamLabs.Gfx.Editor.Views.SamLabsSplash"
        Title="SamLabsSplash" Background="Transparent">
    <Window.Resources>
    </Window.Resources>
    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
        <TextBlock FontSize="70" FontWeight="Bold" Foreground="DimGray" HorizontalAlignment="Center" Margin="0,-10,0,0">
            <TextBlock.Effect>
                <DropShadowDirectionEffect
                    ShadowDepth="8"
                    Direction="0"
                    Color="LightGray"
                    Opacity="0.8"
                    BlurRadius="0"/>
            </TextBlock.Effect>
            SamLabs.Gfx
        </TextBlock>

        <TextBlock Text="Editor Lite" FontSize="36" Foreground="SteelBlue" TextAlignment="Right" Margin="0,-15,70,0"/>
        
    </StackPanel>
</Window>
